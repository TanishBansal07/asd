---
import Skillcard from "./skillcard.astro"
let skills = {
    "Languages": ["js", "python","R"],
    "Frontend": ["react", "HTML", "css", "bootstrap"],
    "Backend": ["node", "flask"],
    "Databases": ["MySQL", "PostgreSQL"],
    "Tools": ["git", "github", "Heroku"],
}

---
<div>
    <div id="skills">
        {Object.entries(skills).map(([category, skills]) => (
          <div id={category} class=" my-3 p-2">
            <div class="text-center">{category}</div>
            <div class="flex m-2 p-2 bg-slate-50 justify-center">
            {skills.map((skill) => (
              <Skillcard skillname={skill} />
            ))}
            </div>  
          </div>
        ))}
      </div>
</div>