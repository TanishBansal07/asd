---
import Layout from "../layouts/Layout.astro"
import Navbar from "../components/navbar.astro"

const projects = [
  { id: 1, title: 'Project 1', description: 'A brief description of Project 1.' },
  { id: 2, title: 'Project 2', description: 'A brief description of Project 2.' },
  { id: 3, title: 'Project 3', description: 'A brief description of Project 3.' },
];
---
<Layout>
    <Navbar/>
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-center text-blue-600 mb-8">Projects</h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {projects.map((project) => (
            <div
              id={project.id}
              class="bg-white shadow-lg rounded-lg p-6 border border-gray-200 hover:shadow-xl transition-shadow duration-300"
            >
              <h2 class="text-2xl font-semibold text-blue-500">{project.title}</h2>
              <p class="mt-2 text-gray-700">{project.description}</p>
            </div>
          ))}
        </div>
      </div>
</Layout>
